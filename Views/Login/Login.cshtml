@model SkillSkulptor.Models.LoginViewModel

@{
    ViewData["Title"] = "Inloggning";
}

<div asp-validation-summary="All" class="text-danger"></div> 
<form asp-action="Inloggning" method="Post" class="flex-md-column justify-content-center m-5">
<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-primary text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">

                            <h2 class="fw-bold mb-2 text-uppercase">Logga in</h2>
                            <p class="text-white-50 mb-5">Skriv in din email och lösenord</p>

                            <div class="form-outline form-white mb-4">
                                <input asp-for ="Email" type="email" class="form-control form-control-lg" placeholder="Skriv din email" />
                                <label asp-for="Email">Email</label>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <input asp-for ="Password" type="password" class="form-control form-control-lg" placeholder="Skriv ditt lösenord" />
                                <label asp-for ="Password">Lösenord</label>
                            </div>

                            <button class="btn btn-outline-light btn-lg px-5" type="submit">Logga in</button>

                        </div>

                        <div>
                            <p class="mb-0">
                                Har du inget konto? <a href="#!" class="text-white-50 fw-bold">Registrera dig här!</a>
                            </p>
                        </div>
                        <div class="form-outline formbg-white mb-4">
                            <a asp-action="Register">Regisstrera dig!</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section> 
</form>

