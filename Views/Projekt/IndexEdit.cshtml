@model ProjectViewModel

<h2>REDIGERA PROJEKT</h2>

<!--Skapa projekt Content-->
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="UpdateProject" method="Post" class="flex-md-column justify-content-center m-5">

    <input type="hidden" asp-for="ProjectId" />

    <div class="form1 form-group">
        <label asp-for="ProjectName">Namn</label>
        <input asp-for="ProjectName" type="text" class="form-control" placeholder="Skriv Namn här">
    </div>
    <div class="form4 form-group">
        <label asp-for="Description">Beskrivning</label>
        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Beskriv projektet här (max 500ord)"></textarea>
    </div>
    <div class="form2 form-group">
        <label asp-for="Startdate">StartDatum</label>
        <input asp-for="Startdate" type="date" class="form-control" placeholder="Skriv StartDatum här">
    </div>
    <div class="form3 form-group">
        <label asp-for="Enddate">SlutDatum</label>
        <input asp-for="Enddate" type="date" class="form-control" placeholder="Skriv SlutDatum här">
    </div>
    <div class="form3 form-group">
        <label asp-for="MaxPeople">Antal Deltagare</label>
        <select asp-for="MaxPeople" class="form-control">

            @for (int i = ViewBag.Count; i <= 10; i++)
            {
                <option value="@i">@i</option>
            }
            
        </select>
    </div>
    <div>
        <button type="submit" class="btn btn-primary btn-lg btn-block m-5">Redigera Projekt</button>
    </div>

</form>