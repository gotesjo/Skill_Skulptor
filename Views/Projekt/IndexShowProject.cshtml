@model ProjectViewModel
@{
    ViewData["Title"] = "Mitt CV";
}

<div class="container-fluid p-0">
   
    <h1>@Model.CreatedByUser</h1>

    <div class="subheading mb-5">
        <h2 class="mb-5">Beskrivning</h2>
        @Model.Description
    </div>

    <div class="subheading mb-5">
        <h2 class="mb-5">Varaktighet</h2>
        @Model.Startdate - @Model.Enddate
    </div>

    <div class="subheading mb-5">
        <h2 class="mb-5">Deltagare</h2>
        @foreach (ProjectMembers p in Model.ProjectMembers)
        {
                    @if (p.User.ProfileAccess && p.User.Active)
                    {
                        <img src="@Url.Action("UserImage", "Profile", new { userId = p.User.Id })" class="rounded-circle mr-1" alt="@p.User.Firstname @p.User.Lastname" width="40" height="0">
                        <span>@p.User.Firstname @p.User.Lastname</span>
                    } 
        }
    </div>

</div>